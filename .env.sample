# Blockchain Demo Configuration
# Copy this file to .env and customize as needed

# Server Configuration
PORT=8080
HOST=localhost

# Demo Data
DEMO_MODE=true
LOAD_SAMPLE_TRANSACTIONS=true

# User Roles (for demo purposes)
DEFAULT_ATTORNEY_EMAIL=john.attorney@lawfirm.com
DEFAULT_LENDER_EMAIL=sarah.underwriter@bank.com
DEFAULT_BORROWER_EMAIL=ceo@marketstreetdev.com
DEFAULT_NOTARY_EMAIL=notary123@notaryservice.com
DEFAULT_CLERK_EMAIL=clerk@phila.gov

# Transaction Defaults
DEFAULT_LOAN_AMOUNT_MIN=1000000
DEFAULT_LOAN_AMOUNT_MAX=50000000

# Document Types
SUPPORTED_DOCUMENT_TYPES=Promissory Note,Deed of Trust,Title Insurance,Loan Agreement,Security Agreement,UCC Filing,Environmental Report,Survey,Appraisal,Operating Agreement

# Blockchain Settings (for future production use)
BLOCKCHAIN_NETWORK=testnet
USE_REAL_BLOCKCHAIN=false
ETHEREUM_RPC_URL=
PRIVATE_KEY=
CONTRACT_ADDRESS=

# Storage Settings
IPFS_ENABLED=false
IPFS_GATEWAY=
DATABASE_URL=

# Security
ENABLE_ENCRYPTION=false
REQUIRE_AUTHENTICATION=false
JWT_SECRET=

# DocuSign Configuration
# Create a developer account at https://developers.docusign.com
# Create an integration (app) with JWT Grant for server-side authentication
DOCUSIGN_INTEGRATION_KEY=
DOCUSIGN_ACCOUNT_ID=
DOCUSIGN_USER_ID=
DOCUSIGN_PRIVATE_KEY_PATH=./keys/docusign-private.pem
# Environment: 'development' uses demo.docusign.net, 'production' uses docusign.net
DOCUSIGN_ENVIRONMENT=development
# Webhook HMAC key for signature validation (generate a random 32+ character string)
DOCUSIGN_WEBHOOK_HMAC_KEY=
# Base URL for return URLs after signing (e.g., http://localhost:3000 for local dev)
DOCUSIGN_RETURN_BASE_URL=http://localhost:3000
